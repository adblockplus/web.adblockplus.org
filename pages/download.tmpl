title=Download Adblock Plus
description=Download Adblock Plus for FREE and enjoy a faster web experience, without annoying ads. Available for Chrome, Firefox, Safari, Opera, Internet Explorer and for your Android and iOS devices.
heading=<span>Download Adblock Plus</span> <span>for any device</span>
subheading=Surf the web with no annoying ads in any browser and supported platforms.
template=minimal

<header class="download-header section content container text-center">
    <img
        class="download-icon"
        src="/img/download-icon-illustration.svg"
        alt="{{ "Illustration of download icon" | translate("download-icon-alt", "Alt text") }}">
    <h1 class="linebreak">{{ heading | translate("download-heading", "Heading") }}</h1>
    <p class="dark-grey">{{ subheading | translate("download-subheading", "Subheading") }}</p>
</header>

<div id="supported-devices"
  class="download-options text-center">
  <div class="mobile-products bg-secondary">
    <section class="container content">
      <div class="download-abb"
        itemscope itemtype="https://schema.org/SoftwareApplication">
        <meta itemprop="applicationCategory" content="BrowserApplication">
        <meta itemprop="applicationCategory" content="CommunicationApplication">
        <meta itemprop="operatingSystem" content="Android">
        <meta itemprop="name" content="Adblock Browser">
        <meta itemprop="description" content="Block annoying ads & pop-ups, stop malware, save mobile data and battery life with Adblock Browser, the FREE ad blocker for Android.">
        <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
          <meta itemprop="price" content="0">
        </div>
        <div class="tab-text-contents">
          <div class="app-icons">
            <img
              src="/img/abb-browser-icon.svg"
              alt="{{ "Adblock Browser logo icon" | translate("abb-icon-alt", "Alt text") }}">
          </div>
          <h2>{{ "Get Adblock Browser" | translate("download_abb-title", "Heading") }} <br>
            <span
              class="sub-heading">
              {{ "Block ads in a dedicated ad-blocking browser" | translate("download_abb-note", "Paragraph") }}</span>
          </h2>
          <div class="abb">
            <? include install-button-android ?>
            <p class="description">{{ "Adblock Browser blocks intrusive and malicious advertisements, while supporting website creators by allowing <a href=\"acceptable-ads\"><strong>Acceptable Ads</strong></a> by default (this, however, is configurable)." | translate("download_abb-description", "Paragraph") }}</p>
          </div>
        </div>
      </div>
      {% set browsers = [
        {
          "id":"android_samsungBrowser",
          "class":"abp-android-samsungBrowser",
          "name":"Samsung Internet (Android)",
          "description":"Adblock Plus for Samsung Internet (Android) brings you a cleaner, smoother online experience on your Samsung browser without intrusive ads."
        },
        {
          "id":"ios_safari",
          "class":"abp-ios-safari",
          "name":"Safari (iOS)",
          "description":"Adblock Plus for Safari (iOS) has all the ad blocking power of the desktop version, but fine tuned for use with the Safari mobile browser. Also saves battery life and optimizes surfing speed."
        }
      ] %}

      <div class="download-mobile"
        itemscope itemtype="https://schema.org/SoftwareApplication">
        <meta itemprop="applicationCategory" content="BrowserApplication">
        <meta itemprop="applicationCategory" content="UtilitiesApplication">
        <meta itemprop="operatingSystem" content="Android, Ios">
        <meta itemprop="name" content="Adblock Plus Mobile">
        <meta itemprop="description" content="{{description}}">
        <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
          <meta itemprop="price" content="0">
        </div>
        <div class="tab-text-contents">
          <div class="app-icons">
            <img
              src="/img/icon-android.svg"
              alt="{{ "Android device icon" | translate("android-icon-alt", "Alt text") }}">
            <img
              src="/img/icon-apple.svg"
              alt="{{ "Apple device icon" | translate("apple-icon-alt", "Alt text") }}">
          </div>
          <h2>{{ "Block ads on your mobile browser" | translate("download-mobile-title", "Heading") }}</h2>
          <div class="tabs">
            <ul role="tablist" class="horizontal-list tabs-menu">
              {% for brws in browsers %}
              <li
                {% if brws.id == 'android_samsungBrowser' %} class="current-tab"{% endif %}>
                <a
                  role="tab"
                  aria-controls="{{ brws.id }}-tab"
                  class="{{ brws.class }}"
                  id="{{ brws.id }}_tab"
                  href="#{{ brws.id }}_panel">
                  {{ brws.name | translate(brws_identifier, "Product name") }}
                </a>
              </li>
              {% endfor %}
            </ul>
            {% for brws in browsers %}
            <div
              role="tabpanel"
              aria-labelledby="{{ brws.id }}_tab"
              id="{{ brws.id }}_panel"
              class="tab-content {% if brws.id in ('chrome', 'android_samsungBrowser') %} current-tab{% endif %}">
              {% if brws.id == 'android_samsungBrowser' %}
              <? include install-button-samsung ?>
              {% endif %}
              {% if brws.id == 'ios_safari' %}
              <? include install-button-ios-safari ?>
              {% endif %}
              <p class="description">{{ brws.description | translate(brws.id + "-description", "Paragraph") }}</p>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="container content">
    {% set browsers = [
      {
        'id':'chrome',
        'class':'abp-chrome',
        'name':'Chrome',
        'url':'https://chrome.google.com/webstore/detail/cfhdojbkjhnklbpkdaibdccddilifddb',
        'rating':'<span itemprop="ratingValue">4.4</span> stars on <strong itemprop="author">Chrome Web Store</strong>',
        'cta':'Get Adblock Plus for Chrome'
      },
      {
        'id':'firefox',
        'class':'abp-firefox',
        'name':'Firefox',
        'url':'https://eyeo.to/adblockplus/firefox_install/',
        'rating':'<span itemprop="ratingValue">4.6</span> stars on <strong itemprop="author">Mozilla Add-ons</strong>',
        'cta':'Get Adblock Plus for Firefox'
      },
      {
        'id':'safari',
        'class':'abp-safari',
        'name':'Safari',
        'url':'https://eyeo.to/adblockplus/macos_safari_install/',
        'cta':'Agree and install for Safari'
      },
      {
        'id':'msedge',
        'class':'abp-msedge',
        'name':'Microsoft Edge',
        'url':'https://eyeo.to/adblockplus/edge_install/',
        'rating':'<span itemprop="ratingValue">4.6</span> stars on <strong itemprop="author">Microsoft Edge Add-ons</strong>',
        'cta':'Get Adblock Plus for Microsoft Edge'
      },
      {
        'id':'opera',
        'class':'abp-opera',
        'name':'Opera',
        'url':'https://eyeo.to/adblockplus/opera_install/',
        'rating':'<span itemprop="ratingValue">4.3</span> stars on <strong itemprop="author">Opera Add-ons</strong>',
        'cta':'Get Adblock Plus for Opera'
      },
      {
        'id':'yandexbrowser',
        'class':'abp-yandexbrowser',
        'name':'Yandex Browser',
        'url':'https://chrome.google.com/webstore/detail/cfhdojbkjhnklbpkdaibdccddilifddb',
        'rating':'<span itemprop="ratingValue">4.4</span> stars on <strong itemprop="author">Chrome Web Store</strong>',
        'cta':'Get Adblock Plus for Yandex Browser'
      }
    ] %}

    <section class="download-desktop"
      itemscope itemtype="https://schema.org/SoftwareApplication">
      <meta itemprop="applicationCategory" content="BrowserApplication">
      <meta itemprop="applicationCategory" content="UtilitiesApplication">
      <meta itemprop="operatingSystem" content="All">
      <meta itemprop="name" content="Adblock Plus Desktop">
      <meta itemprop="description" content="{{description}}">
      <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <meta itemprop="price" content="0">
      </div>
      <div class="tab-media-contents">
        <img
          src="/img/abp-laptop-illustration-with-icons.svg"
          alt="{{ "Illustration of Adblock Plus on desktop" | translate("download-desktop-icon-alt", "Alt text") }}">
      </div>
      <div class="tab-text-contents">
        <h2 class="linebreak">{{ "<span>Block ads on any</span> <span>desktop browser</span>" | translate("download-desktop-title", "Heading") }}
          <span
            class="sub-heading show-mobile">
            {{ "Add-on available ONLY on desktop computers" | translate("download-desktop-note", "Paragraph") }}</span>
        </h2>
        <div class="tabs">
          <ul role="tablist" class="horizontal-list tabs-menu">
            {% for brws in browsers %}
            <li
              {% if brws.id == 'chrome' %} class="current-tab"{% endif %}>
              <a
                role="tab"
                aria-controls="{{ brws.id }}-tab"
                class="{{ brws.class }}"
                id="{{ brws.id }}_tab"
                href="#{{ brws.id }}_panel">
                {{ brws.name | translate(brws_identifier, "Product name") }}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% for brws in browsers %}
          <div
            role="tabpanel"
            aria-labelledby="{{ brws.id }}_tab"
            id="{{ brws.id }}_panel"
            class="tab-content {% if brws.id == 'chrome' %} current-tab{% endif %}">
            <div class="tab-column">
              <a
                id="abp_{{ brws.id }}"
                data-install-suffix="index"
                class="install-button button download-button"
                href="{{ brws.url }}">
                {{ brws.cta | translate(brws.id + "-cta", "Paragraph")}}
              </a>
              <p class="tou-note">
                {{ "By clicking the link above, you agree to our <a href=\"terms\">Terms of Use</a>." | translate("download-desktop-tou-note", "Paragraph") }}</p>
            </div>
            <div class="tab-column">
              {% if brws.rating %}
              <div class="rating">
                <svg width="70.701mm" class="stars" version="1.1" viewBox="0 0 70.701 14.775" xmlns="http://www.w3.org/2000/svg">
                  <rect x=".28814" y=".50425" width="70.125" height="13.766" fill="#C4C4C4"/>
                  <rect x=".28814" y=".50425" width="70.125" height="13.766" stroke-width=".97372" fill="#EDA51E" class="rating-bar"/>
                  <path d="m0 3.359e-7v14.775h70.701v-14.775zm8.7984 2.713 1.4955 3.0308 3.344 0.48576-2.4205 2.359 0.56999 3.3316-2.989-1.5725-2.9921 1.573 0.57-3.3316-2.419-2.359 3.344-0.48627zm13.418 0.14159 1.4955 3.0308 3.344 0.48628-2.4205 2.359 0.56999 3.3311-2.989-1.5725-2.9916 1.573 0.57-3.3316-2.419-2.359 3.344-0.48628zm13.229 0 1.4955 3.0308 3.344 0.48628-2.4205 2.359 0.57 3.3311-2.989-1.5725-2.9916 1.573 0.56999-3.3316-2.419-2.359 3.344-0.48628zm13.229 0 1.4955 3.0308 3.344 0.48628-2.4205 2.359 0.56999 3.3311-2.989-1.5725-2.9916 1.573 0.56999-3.3316-2.419-2.359 3.344-0.48628zm13.229 0 1.4955 3.0308 3.344 0.48628-2.4205 2.359 0.56999 3.3311-2.989-1.5725-2.9916 1.573 0.57-3.3316-2.419-2.359 3.344-0.48628z" fill="#fff"/>
                </svg>
                <p itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                  <meta itemprop="name" content="Adblock Plus for Desktop">
                  <meta itemprop="worstRating" content="0">{{ brws.rating | translate(brws.id + "-rating", "Paragraph")}}
                  <meta itemprop="bestRating" content="5">
                  <meta itemprop="url" content="{{ brws.url }}">
                </p>
              </div>
              {% endif %}
            </div>
          </div>
          {% endfor %}
          <p class="description">{{ "Download Adblock Plus to block annoying ads and pop-ups and to improve loading times. Support fair publishers by allowing <a href=\"acceptable-ads\"><strong>Acceptable Ads</strong></a> (can be turned off at any time) or by allowlisting websites." | translate("download-desktop-description", "Paragraph") }}</p>
        </div>
      </div>
    </section>
  </div>
</div>
