    "icons":"desktop_abp.svg",
    "icon_alt":"Illustration of Adblock Plus on desktop",
    "title":"Block ads on any desktop browser",
    "subtitle":"Add-on available ONLY on desktop computers",
    "platforms":[
      {
        "id":"chrome",
        "class":"abp-chrome",
        "name":"Chrome",
        "url":"https://chrome.google.com/webstore/detail/cfhdojbkjhnklbpkdaibdccddilifddb",
        "webstore_install":"true",
