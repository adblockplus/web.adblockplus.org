      {
        "id":"firefox",
        "class":"abp-firefox",
        "name":"Firefox",
        "url":"https://eyeo.to/adblockplus/firefox_install/",
        "direct_install":"true",
        "rating":"<span>4.6</span> stars on <strong>Mozilla Add-ons</strong>"
      },
      {
        "id":"msie",
        "class":"abp-msie",
        "name":"Internet Explorer",
