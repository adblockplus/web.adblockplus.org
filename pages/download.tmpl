title=Download Adblock Plus
description=Get Adblock Plus for free on Firefox, Chrome, Opera, Safari, Android and iOS
template=minimal

<head>
  <style>
    header img {
      width: 4em;
      height: auto;
    }
  </style>
  <script src="/js/tracking.js"></script>
</head>

{% set supported_devices = [
  {
    "id": "desktop",
    "icons": { "1x": "device-desktop.png", "2x": "device-desktop-2x.png" },
    "icon_alt": "Computer monitor and mouse icon",
    "title": "Block ads on any desktop browser",
    "description": "By clicking any of the links below, you agree to our " +  "terms" | linkify  + "Terms of Use</a>.",
    "platforms": [
      { "id": "chrome", "name": "Chrome", "url": "https://chrome.google.com/webstore/detail/cfhdojbkjhnklbpkdaibdccddilifddb" },
      { "id": "firefox", "name": "Firefox", "url": "https://eyeo.to/adblockplus/firefox_install/" },
      { "id": "msie", "name": "Internet Explorer", "url": "https://eyeo.to/adblockplus/ie_install/" },
      { "id": "safari", "name": "Safari", "url": "https://eyeo.to/adblockplus/macos_safari_install/" },
      { "id": "msedge", "name": "Edge (beta)", "url": "https://eyeo.to/adblockplus/edge_install/" },
      { "id": "opera", "name": "Opera", "url": "https://eyeo.to/adblockplus/opera_install/" },
      { "id": "maxthon", "name": "Maxthon", "url": "http://www.maxthon.com/mx5/features/ad-blocker/" },
      { "id": "yandexbrowser", "name": "Yandex Browser", "url": "https://chrome.google.com/webstore/detail/cfhdojbkjhnklbpkdaibdccddilifddb" }
    ]
  },
  {
    "id": "mobile",
    "icons": { "1x": "device-mobile.png", "2x": "device-mobile.svg" },
    "icon_alt": "Mobile icon",
    "title": "Block ads on your mobile browser",
    "platforms": [
      { "id": "android_samsung", "name": "Samsung Internet (Android)", "url": "https://eyeo.to/adblockplus/android_samsung_install/" },
      { "id": "safari_ios", "name": "Safari (iOS)", "url": "https://eyeo.to/adblockplus/ios_safari_install/" },
      { "id": "firefox", "name": "Firefox", "url": "https://eyeo.to/adblockplus/firefox_install/" }
    ]
  },
  {
    "id": "abb",
    "icons": { "1x": "abb-icon.png", "2x": "abb-icon-2x.png" },
    "icon_alt": "Adblock Browser logo",
    "title": "Block ads in a dedicated ad-blocking browser",
    "platforms": [
      { "id": "abb_android", "name": "Adblock Browser (Android)", "url": "https://eyeo.to/adblockbrowser/android/" },
      { "id": "abb_ios", "name": "Adblock Browser (iOS)", "url": "https://eyeo.to/adblockbrowser/ios/" }
    ]
  }
] %}

<header class="bg-primary section content text-center">
  <div class="container">
    <img height="90px"
         width="90px"
         src="/img/download-icon.png" 
         srcset="/img/download-icon.svg 2x" 
         alt="{{ "White down arrow" | translate("download-icon", "Alt text") }}">
    <h1>{{ "Get Adblock Plus products on these devices" | translate("download-heading", "Heading") }}</h1>
    <p>{{ "Supported platforms" | translate("download-subheading", "Subheading") }}</p>
  </div>
</header>

<div id="supported-devices" class="item-group container text-center content">
  <div class="row">
    {% for device in supported_devices %}
    <div class="column one-third">
      <img
        height="90px"
        width="90px"
        src="/img/{{ device.icons['1x'] }}"
        srcset="/img/{{ device.icons['2x'] }} 2x"
        alt="{{ device.icon_alt | translate(device.id + "-icon-alt", "Alt text") }}">
      <h2>{{ device.title | translate(device.id + "-title", "Heading") }}</h2>
      <div>
        {% if device.description %}
        <p><small>{{ device.description | safe | translate(device.id + "-description", "Paragraph") }}</small></p>
        {% endif %}
        <ul class="horizontal-list">
          {% for platform in device.platforms %}
            <li>
              {% set platform_identifier = device.id + "-product-name-" + loop.index | string  %}
              <a
                href="{{ platform.url }}"
                data-ga='{"event_category": "Download_button", "event_action": "Download", "event_label": "Downloaded_{{ platform.id }}"}'
              >
                {{ platform.name | translate(platform_identifier, "Product name") }}</a>{{ ", " if loop.index != loop.length }}
            </li>
          {% endfor %}
        </ul>
        {% if device.id == 'desktop' and locale == 'en' %}
          <p class="alert">{{ 'NEW! <a href="ad-blocker-safari">Adblock Plus for Safari on macOS</a>' | translate('new-safari-alert', 'alert text') }}</p>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>
