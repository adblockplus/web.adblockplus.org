    "title":"Get Adblock Browser",
    "subtitle":"Block ads in a dedicated ad-blocking browser",
    "platforms":[
      {
        "id":"abb_ios",
        "class":"abb-ios",
        "name":"Adblock Browser (iOS)",
        "url":"https://eyeo.to/adblockbrowser/ios/"
      },
      {
        "id":"abb_android",
        "class":"abb-android",
        "name":"Adblock Browser (Android)",
        "url":"https://eyeo.to/adblockbrowser/android/"
      }
    ],
    "description":"Adblock Browser blocks intrusive and malicious advertisements, while supporting website creators by allowing <a href=\"https://adblockplus.org/en/acceptable-ads\"><strong>Acceptable Ads</strong></a> by default (this, however, is configurable)."
  },
  {
    "class":"download-mobile",
    "icons":"mobile_abp.svg",
    "icon_alt":"Illustration of Adblock Plus ad blocking app",
    "title":"Block ads on your mobile browser",
    "platforms":[
      {
        "id":"android_samsung",
        "class":"abp-android-samsungBrowser",
        "name":"Samsung Internet (Android)",
        "url":"https://eyeo.to/adblockplus/android_samsung_install/",
