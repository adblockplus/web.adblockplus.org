<header class="download-header section content text-center">
  <div class="container">
    <h1>{{ "Download Adblock Plus for any device" | translate("download-heading", "Heading") }}</h1>
    <p>{{ "Surf the web with no annoying ads in any browser and supported platforms." | translate("download-subheading", "Subheading") }}</p>
  </div>
</header>

<div id="supported-devices" class="download-options container text-center content">
  {% for device in supported_devices %}
  <section class="{{ device.class }}">
    <div class="media-contents">
      <img
        src="/img/{{ device.icons }}"
        alt="{{ device.icon_alt | translate(device.class + "-icon-alt", "Alt text") }}">
    </div>
    <div class="text-contents">
      <h2>{{ device.title | translate(device.class + "-title", "Heading") }}</h2>
      {% if device.subtitle %}
      <p
        {% if device.class == 'download-desktop' %} class="mobile-show"{% endif %}>
        <small>{{ device.subtitle | safe | translate(device.class + "-note", "Paragraph") }}</small></p>
      {% endif %}
      {% if device.class in ('download-desktop', 'download-mobile') %}
      <div class="desktop-tabs">
        <ul class="horizontal-list desktop-tabs-menu">
          {% for platform in device.platforms %}
          <li
            {% if platform.id in ('chrome', 'android_samsung') %} class="active"{% endif %}>
            {% set platform_identifier = device.class + "-product-name-" + loop.index | string  %}
            <a
              class="{{ platform.class }}"
              href="#{{ platform.class }}-tab">
              <strong>{{ platform.name | translate(platform_identifier, "Product name") }}</strong>
            </a>
          </li>
          {% endfor %}
        </ul>
        {% for platform in device.platforms %}
        <div
          id="{{ platform.class }}-tab"
          class="desktop-tab-content {% if platform.id in ('chrome', 'android_samsung') %} active{% endif %}">
          {% if device.class == 'download-desktop' %}
          <div class="tab-column">
          {% endif %}
            <a
              id="{{ platform.class }}"
              data-install-suffix="index"
              class="install-button {% if device.button %}button download-button{% endif %}"
              href="{{ platform.url }}">
              {% if platform.direct_install %}
              {% if device.direct_install_prefix %}
              {{ device.direct_install_prefix | translate(device.class + "-direct-install-prefix", "Paragraph") }}
              {% endif %}
              <strong>{{ platform.name }}</strong>
              {% endif %}
              {% if platform.webstore_install %}
              {% if device.webstore_install_prefix %}
              {{ device.webstore_install_prefix | translate(device.class + "-webstore-install-prefix", "Paragraph") }}
              {% endif %}
              <strong>{{ platform.name }}</strong>
              {% endif %}
            </a>
            {% if device.tou_note %}
              <p class="tou-note"><small>{{ device.tou_note | safe | translate(device.class + "-tou-note", "Paragraph") }}</small></p>
            {% endif %}
          {% if device.class == 'download-desktop' %}
          </div>
          <div class="tab-column">
          {% endif %}
            {% if platform.rating %}
            <div class="rating">
              <img src="/img/rating-stars.png" alt="">
              <p><small>{{ platform.rating | safe | translate(platform.class + "-rating", "Paragraph")}}</small></p>
            </div>
            {% endif %}
          {% if device.class == 'download-desktop' %}
          </div>
          {% endif %}
          {% if platform.description %}
          <p class="description">{{ platform.description | safe | translate(platform.class + "-description", "Paragraph") }}</p>
          {% endif %}
        </div>
        {% endfor %}
      </div>
      {% if device.description %}
      <p class="description">{{ device.description | safe | translate(device.class + "-description", "Paragraph") }}</p>
      {% endif %}
      {% endif %}

      {% if device.class == 'download-abb'%}
      <div class="abb">
        {% for platform in device.platforms %}
        <a
          id="{{ platform.class }}"
          data-install-suffix="index"
          class="install-button"
          href="{{ platform.url }}">
        </a>
        {% endfor %}
        {% if device.description %}
        <p class="description">{{ device.description | safe | translate(device.class + "-description", "Paragraph") }}</p>
        {% endif %}
      </div>
      {% endif %}

    </div>
  </section>
  {% endfor %}
</div>


<script src="/js/vendor/bowser.js"></script>

<script>
  document.body.classList.add(bowser.name);
</script>
