<script>(()=>{
  function loadDefaultPremiumScript() {
    console.log('GROW-185: did not participate');
    const checkoutScript = document.createElement("script");
    checkoutScript.type = "module";
    checkoutScript.async = false;
    checkoutScript.src = "/js/premium-checkout.js";
    document.body.appendChild(checkoutScript);

    const preventDuplicateScript = document.createElement("script");
    preventDuplicateScript.type = "module";
    preventDuplicateScript.async = false;
    preventDuplicateScript.src = "/js/prevent-duplicate-subscription.js";
    document.body.appendChild(preventDuplicateScript);
  }

  function meetsExtensionVersion(version) {
    if (!version) return false;

    const target = [4, 26, 0];
    const current = version.split('.').map(Number);

    for (let i = 0; i < 3; i++) {
      if (current[i] > target[i]) return true;
      if (current[i] < target[i]) return false;
    }

    return true;
  }

  function initExperiment() {
    adblock.setupExperiment({
      id: "GROW-185",
      conditions: () => {
        return new Promise((resolve, reject) => {
          console.log('GROW-185: waiting for extension info');
          try {
            adblock.afterAdblockPlusDetected(() => {
              const extensionVersion = adblock.query.get("qa-xv") || adblock.adblockPlus?.version;
              if (adblock.adblockPlus?.isPremium) {
                console.log('GROW-185: user already has premium');
                resolve(false);
              } else if (meetsExtensionVersion(extensionVersion)) {
                console.log('GROW-185: meets minimum extension version');
                resolve(true);
              } else {
                console.log('GROW-185: does not meet minimum extension version');
                resolve(false);
              }
            }, () => {
              console.log('GROW-185: extension not detected');
              resolve(false);
            });
          } catch (error) {
            adblock.logScriptError("adblock.experiment", error);
            resolve(false);
          }
        });
      },
      noParticipateCallback: loadDefaultPremiumScript,
      trafficAllocation: 100,
      control: {
        script: ["/js/premium-checkout.js", "/js/prevent-duplicate-subscription.js"]
      },
      variant: {
        script: ["/experiments/grow-185/variant.js", "/experiments/grow-185/ua-prevent-duplicate-subscription.js"]
      }
    });
  }

  // Exclude referrals from other pages handing off to old activation flow.
  // Limit experiment to English only, US, CA, AU
  const meetsCriteria = window.location.pathname.endsWith("/premium") &&
                        !adblock.query.has("premium-checkout__handoff") &&
                        !adblock.query.has("premium-checkout__flow") &&
                        !adblock.query.has("restore-purchase") &&
                        !adblock.query.has("already-contributed") &&
                        !adblock.query.has("_ptxn") &&
                        "en" === adblock.settings.locale &&
                        (["US", "CA", "AU"].includes(adblock.settings.country) || adblock.query.has("grow-185"));

  if (meetsCriteria) {
    console.log('GROW-185: meets basic experiment criteria');
    adblock.on("experiment.loaded", () => {
      console.log("GROW-185: variant", adblock.variant);
    });
    initExperiment();
  } else {
    console.log('GROW-185: does not meet basic experiment criteria');
    loadDefaultPremiumScript();
  }

})()</script>


