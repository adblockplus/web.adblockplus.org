<head>
  <? include old/meta/standard ?>
  <? include old/meta/social ?>
  <? include old/styles ?>
  <? include old/polyfills ?>

  {% block head %}
    {{ head | safe }}
  {% endblock %}
</head>

<body>
  <? include old/navbar ?>

  <div id="content" class="container content {{ localefile == "index" and page }}">
    {% if not noheading %}
      <h1>{{title|translate("title")}}</h1>
    {% endif %}

    {% if not notoc %}
      {% macro toc(toclist) %}
        <ul>
          {% for item in toclist %}
            <li>
              <a href="#{{item.anchor}}">{{item.title}}</a>
              {% if item.subitems %}{{toc(item.subitems)}}{% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endmacro %}

      {% set toclist = body|toclist %}

      {% if toclist %}
        <div class="toc">
          {{toc(toclist)}}
        </div>
      {% endif %}
    {% endif %}

    {% block body %}
      {{ body | safe }}
    {% endblock %}

  </div>

  <? include old/footer ?>
  <? include old/scripts ?>
</body>
