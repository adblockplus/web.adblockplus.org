{% if locale in source_sans_pro_locales -%}
  <style>
    @font-face {
      font-family: "Source Sans Pro";
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: local("Source Sans Pro Regular"),
           local("SourceSansPro-Regular"),
           url(<? include fonts/data/source-sans-pro-regular ?>) format('woff2');
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2212, U+2215;
    }
    
    @font-face {
      font-family: "Source Sans Pro";
      font-style: normal;
      font-weight: 600;
      font-display: swap;
      src: local("Source Sans Pro Semibold"),
           local("SourceSansPro-Semibold"),
           url(<? include fonts/data/source-sans-pro-600 ?>) format('woff2');
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2212, U+2215;
    }

    @font-face {
      font-family: "Source Sans Pro";
      font-style: normal;
      font-weight: 700;
      font-display: swap;
      src: local("Source Sans Pro Bold"),
           local("SourceSansPro-Bold"),
           url(<? include fonts/data/source-sans-pro-bold ?>) format("woff2");
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2212, U+2215;
    }
  </style>
{%- endif %}
